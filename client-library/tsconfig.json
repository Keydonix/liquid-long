{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"inlineSources": true,
		"strict": true,
		"noEmitOnError": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"declaration": true,
		"lib": [ "es6" ]
	},
	"include": [
		"./library/**/*.ts"
	]
}
